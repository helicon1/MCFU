<core:View xmlns:l="sap.ui.layout" xmlns:mvc="sap.ui.core.mvc" xmlns:core="sap.ui.core" xmlns="sap.m" controllerName="sap.umc.mobile.home.view.HomeMenu">
    <Page enableScrolling="true">
        <List headerText="{i18n>HOME.BILL}" class="sapUmcProductListToolbar sapUmcListHeading" >
            <StandardListItem title="{i18n>HOME.MAKE_PAYMENT}" icon="sap-icon://lead" type="Navigation" press="onPressMakePayment" />
            <StandardListItem title="{i18n>HOME.AUTO_PAY}" icon="sap-icon://paid-leave" type="Navigation" press="onPressAutoPay" />
            <StandardListItem title="{i18n>HOME.PAYMENT_HISTORY}" icon="sap-icon://time-overtime" type="Navigation" press="onPressPaymentHistory" />
        </List>

        <List headerText="{i18n>HOME.CONSUMPTION}" class="sapUmcProductListToolbar sapUmcListHeading">
            <StandardListItem title="{i18n>HOME.CONSUMPTION_PROFILE}" icon="sap-icon://line-chart" type="Navigation" press="onPressConsumptionProfile" />
        </List>
    </Page>
</core:View>
